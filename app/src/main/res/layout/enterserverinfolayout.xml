<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <ImageButton
        android:id="@+id/settingsButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_manage" />

    <Button
        android:id="@+id/ServerInfoButton"
        android:layout_width="219dp"
        android:layout_height="87dp"
        android:layout_marginBottom="200dp"
        android:text="Enter Server Info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="149dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="IP: {Number}"
        app:layout_constraintStart_toStartOf="@+id/ServerInfoButton"
        app:layout_constraintTop_toBottomOf="@+id/ServerInfoButton" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="145dp"
        android:layout_height="21dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Port: {Number}"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/ConnectButton"
        android:layout_width="111dp"
        android:layout_height="67dp"
        android:layout_marginTop="50dp"
        android:text="Connect"
        app:layout_constraintLeft_toLeftOf="@+id/ServerInfoButton"
        app:layout_constraintRight_toRightOf="@+id/ServerInfoButton"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/TutorialButton"
        android:layout_width="111dp"
        android:layout_height="67dp"
        android:layout_marginTop="15dp"
        android:text="Tutorial"
        app:layout_constraintLeft_toRightOf="@+id/ServerInfoButton"
        app:layout_constraintRight_toLeftOf="@+id/ServerInfoButton"
        app:layout_constraintTop_toBottomOf="@+id/ConnectButton" />

</android.support.constraint.ConstraintLayout>
